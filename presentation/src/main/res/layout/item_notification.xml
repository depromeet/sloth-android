<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_notification_background"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_600"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="✅ 등록한 강의를 듣고 +버튼을 눌러 나무늘보와의 대결을 시작해보세요!" />

        <TextView
            android:id="@+id/tv_notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_500"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_notification_title"
            tools:text="프로그래밍 시작하기: 파이썬 입문 (Inflearn Original)" />

        <TextView
            android:id="@+id/tv_notification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_400"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_notification_content"
            tools:text="2022.11.20" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>