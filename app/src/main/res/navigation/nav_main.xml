<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/today_lesson">

    <include app:graph="@navigation/nav_register_lesson" />

    <action
        android:id="@+id/action_global_to_login"
        app:destination="@id/login"
        app:popUpTo="@id/today_lesson"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_to_expire_dialog"
        app:destination="@id/expired_dialog" />

    <fragment
        android:id="@+id/login"
        android:name="com.depromeet.sloth.presentation.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_login_bottom"
            app:destination="@id/login_bottom" />
        <action
            android:id="@+id/action_login_to_today_lesson"
            app:destination="@id/today_lesson"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/sloth_policy_webview"
        android:name="com.depromeet.sloth.presentation.login.SlothPolicyWebViewFragment"
        android:label="SlothPolicyWebViewFragment"
        tools:layout="@layout/fragment_sloth_policy_web_view">

    </fragment>

    <dialog
        android:id="@+id/login_bottom"
        android:name="com.depromeet.sloth.presentation.login.LoginBottomSheetFragment"
        android:label="LoginBottomSheetFragment"
        tools:layout="@layout/fragment_login_bottom">
        <action
            android:id="@+id/action_login_bottom_to_register_bottom"
            app:destination="@id/register_bottom" />
        <action
            android:id="@+id/action_login_bottom_to_today_lesson"
            app:destination="@id/today_lesson"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </dialog>

    <dialog
        android:id="@+id/register_bottom"
        android:name="com.depromeet.sloth.presentation.login.RegisterBottomSheetFragment"
        android:label="RegisterBottomSheetFragment"
        tools:layout="@layout/fragment_register_bottom">
        <action
            android:id="@+id/action_register_bottom_to_sloth_policy_webview"
            app:destination="@id/sloth_policy_webview"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_register_bottom_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/login_bottom"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_register_bottom_to_today_lesson"
            app:destination="@id/today_lesson"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </dialog>


    <fragment
        android:id="@+id/today_lesson"
        android:name="com.depromeet.sloth.presentation.today.TodayLessonFragment"
        android:label="TodayLessonFragment"
        tools:layout="@layout/fragment_today_lesson">
        <action
            android:id="@+id/action_today_lesson_to_register_lesson_first"
            app:destination="@id/nav_register_lesson"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_today_lesson_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/today_lesson"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_today_lesson_to_wait_dialog"
            app:destination="@id/wait_dialog" />
        <action
            android:id="@+id/action_today_lesson_to_finish_lesson_dialog"
            app:destination="@id/finish_lesson_dialog" />
    </fragment>

    <fragment
        android:id="@+id/lesson_list"
        android:name="com.depromeet.sloth.presentation.list.LessonListFragment"
        android:label="LessonListFragment"
        tools:layout="@layout/fragment_lesson_list">
        <action
            android:id="@+id/action_lesson_list_to_lesson_detail"
            app:destination="@id/lesson_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_lesson_list_to_register_lesson_first"
            app:destination="@id/nav_register_lesson"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_lesson_list_to_wait_dialog"
            app:destination="@id/wait_dialog" />
    </fragment>

    <fragment
        android:id="@+id/manage"
        android:name="com.depromeet.sloth.presentation.manage.ManageFragment"
        android:label="ManageFragment"
        tools:layout="@layout/fragment_manage">
        <action
            android:id="@+id/action_manage_to_sloth_policy_webview"
            app:destination="@id/sloth_policy_webview"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/slide_right_exit" />
        <action
            android:id="@+id/action_manage_to_updateMemberFragment"
            app:destination="@id/update_member"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_manage_to_logout_dialog"
            app:destination="@id/logout_dialog" />
    </fragment>

    <fragment
        android:id="@+id/lesson_detail"
        android:name="com.depromeet.sloth.presentation.detail.LessonDetailFragment"
        android:label="LessonDetailFragment"
        tools:layout="@layout/fragment_lesson_detail">
        <action
            android:id="@+id/action_lesson_detail_to_update_lesson"
            app:destination="@id/update_lesson"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <argument
            android:name="lessonId"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_lesson_detail_to_deleteLessonDialogFragment"
            app:destination="@id/delete_lesson_dialog" />
    </fragment>

    <fragment
        android:id="@+id/update_lesson"
        android:name="com.depromeet.sloth.presentation.update_lesson.UpdateLessonFragment"
        android:label="UpdateLessonFragment"
        tools:layout="@layout/fragment_update_lesson">

        <argument
            android:name="lessonDetail"
            app:argType="com.depromeet.sloth.presentation.item.LessonDetail" />
    </fragment>

    <dialog
        android:id="@+id/update_member"
        android:name="com.depromeet.sloth.presentation.update_member.UpdateMemberFragment"
        android:label="UpdateMemberFragment"
        tools:layout="@layout/fragment_update_member" >
        <argument
            android:name="memberName"
            app:argType="string" />
        <action
            android:id="@+id/action_update_member_to_manage"
            app:destination="@id/manage"
            app:popUpTo="@id/manage"
            app:popUpToInclusive="true" />
    </dialog>

    <dialog
        android:id="@+id/expired_dialog"
        android:name="com.depromeet.sloth.presentation.manage.ExpiredDialogFragment"
        android:label="ExpiredDialogFragment"
        tools:layout="@layout/fragment_expired_dialog"/>

    <dialog
        android:id="@+id/finish_lesson_dialog"
        android:name="com.depromeet.sloth.presentation.finish.FinishLessonDialogFragment"
        android:label="FinishLessonDialogFragment"
        tools:layout="@layout/fragment_finish_lesson_dialog">
        <argument
            android:name="lessonId"
            app:argType="string" />
        <action
            android:id="@+id/action_finish_lesson_dialog_to_today_lesson"
            app:destination="@id/today_lesson"
            app:popUpTo="@id/today_lesson"
            app:popUpToInclusive="true" />
    </dialog>

    <dialog
        android:id="@+id/logout_dialog"
        android:name="com.depromeet.sloth.presentation.manage.LogoutDialogFragment"
        android:label="LogoutDialogFragment"
        tools:layout="@layout/fragment_logout_dialog"/>

    <dialog
        android:id="@+id/wait_dialog"
        android:name="com.depromeet.sloth.presentation.wait.WaitDialogFragment"
        android:label="WaitDialogFragment"
        tools:layout="@layout/fragment_wait_dialog"/>

    <dialog
        android:id="@+id/delete_lesson_dialog"
        android:name="com.depromeet.sloth.presentation.detail.DeleteLessonDialogFragment"
        android:label="DeleteLessonDialogFragment"
        tools:layout="@layout/fragment_delete_lesson_dialog">

        <action
            android:id="@+id/action_delete_Lesson_dialog_to_lesson_list"
            app:destination="@id/lesson_list"
            app:popUpTo="@layout/fragment_lesson_list"
            app:popUpToInclusive="true"/>
    </dialog>

</navigation>