<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.depromeet.sloth.presentation.screen.manage.UpdateMemberViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp">

        <ImageView
            android:id="@+id/iv_member_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/profile_image"
            android:src="@drawable/ic_profile_oval"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_member_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_register_lesson_rounded_edit_text_gray"
            android:hint="@{vm.previousMemberName}"
            android:inputType="textPersonName"
            android:paddingHorizontal="18dp"
            android:textColor="@color/gray_600"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_member_profile_image"
            tools:hint="@string/previous_member_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_member"
            style="@style/Widget.Sloth.Button"
            onSingleClick="@{() -> vm.updateMemberInfo()}"
            android:layout_width="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="40dp"
            android:enabled="@{vm.updateMemberValidation}"
            android:text="@string/finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_member_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>