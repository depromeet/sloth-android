<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sloth.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:title">@null</item>
    </style>

    <style name="Widget.Sloth.Toolbar.WithArrow" parent="Widget.Sloth.Toolbar">
        <item name="navigationIcon">@drawable/ic_toolbar_arrow_back</item>
    </style>

    <style name="Widget.Sloth.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_register_lesson_rounded_edit_text_gray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.Sloth.EditText.Black" parent="Widget.Sloth.EditText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Sloth.EditText.Gray" parent="Widget.Sloth.EditText">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="Widget.Sloth.TextView.HeadLine" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Sloth.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.Sloth.TextView.Black" parent="Widget.Sloth.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Sloth.TextView.Gray" parent="Widget.Sloth.TextView">
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Widget.Sloth.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/bg_register_lesson_rounded_spinner_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.Sloth.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.LargeComponent</item>
        <item name="backgroundTint">@color/selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Sloth.Button.Cancel" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/gray_200</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Widget.Sloth.Button.Register" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/sloth</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Sloth.Button.Start" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/sloth</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Sloth.Button.Delete" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/gray_200</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Widget.Sloth.Button.Login" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/sloth</item>
    </style>

    <style name="Widget.Sloth.Button.Check" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/sloth</item>
    </style>

    <style name="Widget.Sloth.Button.RegisterUpdate" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/gray_200</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="Widget.Sloth.Button.Retry" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/sloth</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="Widget.Sloth.Button.DialogCancel" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/gray_200</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">124dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Widget.Sloth.Button.DialogCheck" parent="Widget.Sloth.Button">
        <item name="android:backgroundTint">@color/error</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">124dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SlothBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SlothBottomSheet</item>
    </style>

    <style name="SlothBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/SlothShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="SlothShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SlothDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:background">@drawable/bg_sloth_dialog</item>
    </style>


</resources>